<!DOCTYPE generatorConfiguration PUBLIC
        "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">
<generatorConfiguration>
    <context id="dsql" targetRuntime="MyBatis3DynamicSql">
        <!-- tag需要按照指定顺序排列 -->
        <plugin type="org.mybatis.generator.plugins.dsql.DisableDeletePlugin"/>

        <jdbcConnection driverClass="com.mysql.cj.jdbc.Driver"
                        connectionURL="jdbc:mysql://admin:123456@localhost:13306/my_db">
            <!-- MySQL connector升级到8.0以后需要加上 -->
            <property name="nullCatalogMeansCurrent" value="true"/>
        </jdbcConnection>

        <javaTypeResolver>
            <property name="forceBigDecimals" value="true"/>
            <property name="useJSR310Types" value="true"/>
        </javaTypeResolver>

        <javaModelGenerator targetPackage="xyz.shiqihao.investment.repo.model"
                            targetProject="my-app-be-application/src/main/java">
            <property name="enableSubPackages" value="true"/>
            <property name="trimStrings" value="true"/>
        </javaModelGenerator>

        <javaClientGenerator targetPackage="xyz.shiqihao.investment.repo.dao"
                             targetProject="my-app-be-application/src/main/java">
            <property name="enableSubPackages" value="true"/>
        </javaClientGenerator>

        <table tableName="investment_operation" domainObjectName="InvestmentOperationDO" mapperName="InvestmentOperationDAO"/>
    </context>
</generatorConfiguration>